{
  /*
    Editor Settings
  */
  "editor.fontFamily": "JetBrainsMono NFP, D2CodingLigature Nerd Font",
  "editor.fontLigatures": false,
  "editor.codeLensFontFamily": "JetBrainsMono NFP, D2CodingLigature Nerd Font",
  "editor.minimap.enabled": false,
  "editor.tabSize": 2,
  "editor.renderFinalNewline": "off",
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "editor.bracketPairColorization.independentColorPoolPerBracketType": true,
  "editor.linkedEditing": true,
  "editor.multiCursorModifier": "ctrlCmd",
  "editor.smoothScrolling": true,
  "editor.cursorBlinking": "smooth",
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.defaultFormatter": "esbenp.prettier-vscode",

  /*
    Workbench Settings
  */
  "workbench.iconTheme": "catppuccin-mocha",
  "workbench.colorTheme": "Catppuccin Mocha",
  "workbench.colorCustomizations": {},
  "workbench.startupEditor": "none",
  "workbench.layoutControl.enabled": false,
  "workbench.statusBar.visible": false,
  "workbench.sideBar.location": "left",
  "workbench.activityBar.location": "top",
  "workbench.list.smoothScrolling": true,
  "workbench.editor.empty.hint": "hidden",

  /*
    Window & UI Style
  */
  "window.title": " ",
  "window.menuBarVisibility": "compact",
  "window.commandCenter": false,
  "window.titleBarStyle": "native",
  "custom-ui-style.electron": {
    "frame": false
  },
  "custom-ui-style.font.monospace": "JetBrainsMono NFP, Pretendard",
  "custom-ui-style.font.sansSerif": "JetBrainsMono NFP, Pretendard",

  /*
    Explorer Settings
  */
  "explorer.confirmDragAndDrop": false,
  "explorer.confirmDelete": false,
  "explorer.decorations.colors": false,
  "explorer.compactFolders": false,

  /*
    Terminal & Shell Settings
  */
  "terminal.integrated.smoothScrolling": true,
  "terminal.integrated.fontFamily": "JetBrainsMono NFP, D2CodingLigature Nerd Font",
  "terminal.integrated.allowChords": false,
  "terminal.integrated.sendKeybindingsToShell": true,
  "terminal.integrated.suggest.enabled": false,
  "terminal.integrated.suggest.quickSuggestions": false,
  "powershell.integratedConsole.showOnStartup": false,
  "powershell.integratedConsole.startInBackground": true,
  "powershell.integratedConsole.focusConsoleOnExecute": false,

  /*
    Git Settings
  */
  "git.ignoreMissingGitWarning": true,
  "git.openRepositoryInParentFolders": "never",

  /*
    Python Settings
  */
  "python.analysis.typeCheckingMode": "strict",
  "python.createEnvironment.trigger": "off",
  "[python]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 4,
    "editor.formatOnType": true
  },

  /*
    AI Settings (Copilot & GitLens)
  */
  "chat.mcp.gallery.enabled": true,
  "github.copilot.nextEditSuggestions.enabled": true,
  "gitlens.ai.model": "vscode",
  "gitlens.ai.vscode.model": "copilot:gpt-5-mini",
  "gitlens.ai.generateCommits.customInstructions": "- Follow Angular Commit Convention\\n- Lowercase first letter",

  /*
    Prettier Settings
  */
  "prettier.arrowParens": "avoid",
  "prettier.bracketSpacing": true,
  "prettier.endOfLine": "lf",
  "prettier.semi": false,
  "prettier.tabWidth": 2,
  "prettier.singleQuote": true,
  "prettier.trailingComma": "none",
  "prettier.resolveGlobalModules": true,

  /*
    License Settings
  */
  "license.author": "Taejun Park",
  "license.default": "mit",
  "license.year": "auto",

  /*
    Extension Specific Settings
  */
  "code-runner.clearPreviousOutput": true,
  "code-runner.runInTerminal": true,
  "liveServer.settings.donotShowInfoMsg": true,
  "liveServer.settings.donotVerifyTags": true,
  "go.toolsManagement.autoUpdate": true,
  "catppuccin.accentColor": "sapphire",
  "catppuccin.bracketMode": "neovim",
  "catppuccin.workbenchMode": "flat",
  "editorconfig.generateAuto": false,
  "files.eol": "\n",

  /*
    General & Security
  */
  "update.mode": "none",
  "security.allowedUNCHosts": ["wsl.localhost", "wsl$"],
  "remote.autoForwardPortsSource": "hybrid",
  "redhat.telemetry.enabled": true,
  "json.schemas": [],

  /*
    Vim Settings
  */
  "vim.enableNeovim": true,
  "vim.leader": "<space>",
  "vim.useSystemClipboard": true,
  "vim.visualModeKeyBindingsNonRecursive": [
    {
      "before": ["y"],
      "commands": ["editor.action.clipboardCopyAction", "extension.vim_escape"]
    },
    {
      "before": ["p"],
      "commands": ["editor.action.clipboardPasteAction", "extension.vim_escape"]
    }
  ],
  "vim.normalModeKeyBindingsNonRecursive": [
    // Do things without affecting the registers
    {
      "before": ["x"],
      "after": ["\"", "_", "x"]
    },
    // Increment/Decrement
    {
      "before": ["+"],
      "after": ["<C-a>"]
    },
    {
      "before": ["-"],
      "after": ["<C-x>"]
    },
    // Delete a word backwards
    {
      "before": ["d", "w"],
      "after": ["v", "b", "\"", "_", "d"]
    },
    // Select All
    {
      "before": ["<C-a>"],
      "after": ["g", "g", "V", "G"]
    }
  ]
}
